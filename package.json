{
  "name": "crushee-desktop",
  "version": "2.0.0",
  "description": "Crushee",
  "main": "src/electron.js",
  "dependencies": {
    "appdata-path": "^1.0.0",
    "del": "^5.1.0",
    "electron-is-dev": "^1.1.0",
    "imagemin": "^7.0.0",
    "imagemin-advpng": "^5.0.0",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-jpeg-recompress": "^6.0.0",
    "imagemin-jpegoptim": "^6.0.0",
    "imagemin-jpegtran": "^6.0.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.0.0",
    "jquery": "^3.4.1",
    "jszip": "^3.2.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "request": "^2.88.0",
    "sharp": "^0.23.0",
    "slash": "^3.0.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "concurrently": "4.1.0",
    "cross-env": "5.2.0",
    "electron": "5.0.9",
    "electron-builder": "21.2.0",
    "parcel-bundler": "1.12.3",
    "sass": "^1.22.9",
    "wait-on": "3.2.0"
  },
  "scripts": {
    "parcel": "parcel src/*.html --port 3001 --out-dir build",
    "parcel-build": "parcel build src/*.html --out-dir build --public-url ./ --experimental-scope-hoisting",
    "electron-build": "electron-builder",
    "appx": "npm run parcel-build && electron-builder -w appx -c.extraMetadata.name=crushee-appx ",
    "appx-signed": "npm run parcel-build && electron-builder -w appx -c.win.certificateFile=cert.pfx -c.extraMetadata.name=crushee-appx",
    "build": "npm run parcel-build && npm run electron-build",
    "start": "wait-on http://localhost:3001/index.html && electron . "
  },
  "author": "Xander Frangos",
  "license": "ISC",
  "build": {
    "productName": "Crushee",
    "appId": "com.xanderfrangos.crushee",
    "directories": {
      "buildResources": "resources"
    },
    "mac": {
      "icon": "src/assets/icon-shadow.icns",
      "category": "",
      "darkModeSupport": true
    },
    "win": {
      "icon": "src/assets/icon-shadow.ico"
    },
    "files": [
      "src/electron.js",
      "src/preload.js",
      "src/assets/*",
      "build/**/*"
    ]
  }
}
